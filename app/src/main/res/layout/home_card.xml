<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/home_card_background"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/_4sdp"
    android:padding="@dimen/_16sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_logo"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_visa_logo" />

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_logo"
        app:layout_constraintTop_toTopOf="@+id/card_logo"
        tools:text="Eduardo Angel Chavero" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/card_logo"
        app:layout_constraintStart_toEndOf="@+id/card_logo"
        tools:text="**** 4561" />

    <TextView
        android:id="@+id/card_expiration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/card_logo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="11/25" />

</androidx.constraintlayout.widget.ConstraintLayout>